<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace=".dao.TravelFeedbackDao">

    <resultMap type="com.lvcong.emprise.entity.TravelFeedback" id="TravelFeedbackMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="content" column="content" jdbcType="VARCHAR"/>
        <result property="tel" column="tel" jdbcType="INTEGER"/>
        <result property="emil" column="emil" jdbcType="VARCHAR"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="time" column="time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="TravelFeedbackMap">
        select
          id, content, tel, emil, name, time
        from travel_feedback
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="TravelFeedbackMap">
        select
          id, content, tel, emil, name, time
        from travel_feedback
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="content != null and content != ''">
                and content = #{content}
            </if>
            <if test="tel != null">
                and tel = #{tel}
            </if>
            <if test="emil != null and emil != ''">
                and emil = #{emil}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="time != null">
                and time = #{time}
            </if>
        </where>
        limit #{pageable.offset}, #{pageable.pageSize}
    </select>

    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(1)
        from travel_feedback
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="content != null and content != ''">
                and content = #{content}
            </if>
            <if test="tel != null">
                and tel = #{tel}
            </if>
            <if test="emil != null and emil != ''">
                and emil = #{emil}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="time != null">
                and time = #{time}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into travel_feedback(content, tel, emil, name, time)
        values (#{content}, #{tel}, #{emil}, #{name}, #{time})
    </insert>

    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into travel_feedback(content, tel, emil, name, time)
        values
        <foreach collection="entities" item="entity" separator=",">
        (#{entity.content}, #{entity.tel}, #{entity.emil}, #{entity.name}, #{entity.time})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="id" useGeneratedKeys="true">
        insert into travel_feedback(content, tel, emil, name, time)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.content}, #{entity.tel}, #{entity.emil}, #{entity.name}, #{entity.time})
        </foreach>
        on duplicate key update
        content = values(content),
        tel = values(tel),
        emil = values(emil),
        name = values(name),
        time = values(time)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update travel_feedback
        <set>
            <if test="content != null and content != ''">
                content = #{content},
            </if>
            <if test="tel != null">
                tel = #{tel},
            </if>
            <if test="emil != null and emil != ''">
                emil = #{emil},
            </if>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="time != null">
                time = #{time},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from travel_feedback where id = #{id}
    </delete>

</mapper>

