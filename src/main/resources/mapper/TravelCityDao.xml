<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace=".dao.TravelCityDao">

    <resultMap type="com.lvcong.emprise.entity.TravelCity" id="TravelCityMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="pid" column="pid" jdbcType="INTEGER"/>
        <result property="cityname" column="cityname" jdbcType="VARCHAR"/>
        <result property="type" column="type" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="TravelCityMap">
        select
          id, pid, cityname, type
        from travel_city
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="TravelCityMap">
        select
          id, pid, cityname, type
        from travel_city
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="pid != null">
                and pid = #{pid}
            </if>
            <if test="cityname != null and cityname != ''">
                and cityname = #{cityname}
            </if>
            <if test="type != null">
                and type = #{type}
            </if>
        </where>
        limit #{pageable.offset}, #{pageable.pageSize}
    </select>

    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(1)
        from travel_city
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="pid != null">
                and pid = #{pid}
            </if>
            <if test="cityname != null and cityname != ''">
                and cityname = #{cityname}
            </if>
            <if test="type != null">
                and type = #{type}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into travel_city(pid, cityname, type)
        values (#{pid}, #{cityname}, #{type})
    </insert>

    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into travel_city(pid, cityname, type)
        values
        <foreach collection="entities" item="entity" separator=",">
        (#{entity.pid}, #{entity.cityname}, #{entity.type})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="id" useGeneratedKeys="true">
        insert into travel_city(pid, cityname, type)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.pid}, #{entity.cityname}, #{entity.type})
        </foreach>
        on duplicate key update
        pid = values(pid),
        cityname = values(cityname),
        type = values(type)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update travel_city
        <set>
            <if test="pid != null">
                pid = #{pid},
            </if>
            <if test="cityname != null and cityname != ''">
                cityname = #{cityname},
            </if>
            <if test="type != null">
                type = #{type},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from travel_city where id = #{id}
    </delete>

</mapper>

