<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace=".dao.TravelResourceDao">

    <resultMap type="com.lvcong.emprise.entity.TravelResource" id="TravelResourceMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="type" column="type" jdbcType="INTEGER"/>
        <result property="postfix" column="postfix" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="TravelResourceMap">
        select
          id, type, postfix
        from travel_resource
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="TravelResourceMap">
        select
          id, type, postfix
        from travel_resource
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="type != null">
                and type = #{type}
            </if>
            <if test="postfix != null and postfix != ''">
                and postfix = #{postfix}
            </if>
        </where>
        limit #{pageable.offset}, #{pageable.pageSize}
    </select>

    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(1)
        from travel_resource
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="type != null">
                and type = #{type}
            </if>
            <if test="postfix != null and postfix != ''">
                and postfix = #{postfix}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into travel_resource(type, postfix)
        values (#{type}, #{postfix})
    </insert>

    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into travel_resource(type, postfix)
        values
        <foreach collection="entities" item="entity" separator=",">
        (#{entity.type}, #{entity.postfix})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="id" useGeneratedKeys="true">
        insert into travel_resource(type, postfix)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.type}, #{entity.postfix})
        </foreach>
        on duplicate key update
        type = values(type),
        postfix = values(postfix)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update travel_resource
        <set>
            <if test="type != null">
                type = #{type},
            </if>
            <if test="postfix != null and postfix != ''">
                postfix = #{postfix},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from travel_resource where id = #{id}
    </delete>

</mapper>

